package rules;
dialect  "mvel"
import xyz.spring4all.springbootdroolstest.domain.*;

rule "p1"
    activation-group "name-switch"
    salience 999
    when
        $person : Person(name == "hello")
    then
        System.out.println("p1:"+$person);
end

